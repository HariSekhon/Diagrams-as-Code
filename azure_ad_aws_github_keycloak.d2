    shape: image
  }
  oidc: {
    label: SSO (OIDC)
    style.stroke-dash: 5
  }
  saml: {
    label: SSO (SAML)
    style.stroke-dash: 5
  }
  animated: {
    style.animated: true
  }
  dash: {
    style.stroke-dash: 5
  }
  invisible: {
    style.opacity: 0
  }
